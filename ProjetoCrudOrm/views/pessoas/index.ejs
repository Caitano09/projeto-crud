<%- include('../partials/header.ejs') %>

<h1>People</h1>
<p><a class="btn btn-outline-primary" href="/pessoas/create">Add New Person</a></p>

<table class="table table-striped table-houver table-bordered">
    <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    <% data.map(pessoa => { %>
        <tr>
            <td><%- pessoa.nome %></td>
            <td><%- pessoa.cargo %></td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/pessoas/edit/<%- pessoa.id %>" class="btn btn-outline-secondary" role="button">Edit</a>
                    <a href="/pessoas/delete/<%- pessoa.id %>" class="btn btn-outline-secondary" onclick="return confirm('Do you really want delete?')">Delete</a>
                </div>
            </td>
        </tr>
    <% }) %>
</table>

Nº registers per page: <a href="/pessoas?pageSize=10">10</a> | <a href="/pessoas?pageSize=50">50</a> | <a href="/pessoas?pageSize=100">100</a>

<nav aria-label="Navegação de página exemplo">
    <ul class="pagination">
        <% if(pagination.currentPage > 0){ %>
            <li class="page-item"><a class="page-link" href="/pessoas?page=<%- pagination.currentPage - 1 %>&pageSize=<%- pagination.pageSize %>">Anterior</a></li>
        <% } %>
        <% for(let i=0; i<pagination.pages; i++){ %>
            <li class="page-item <% if( i == pagination.currentPage){ %> active <% } %>"><a class="page-link" href="/pessoas?page=<%- i %>&pageSize=<%- pagination.pageSize %>"><%- i+1 %></a></li>
        <% } %>
        <% if(pagination.currentPage < pagination.pages-1){ %>
            <li class="page-item"><a class="page-link" href="/pessoas?page=<%- pagination.currentPage + 1%>&pageSize=<%- pagination.pageSize %>">Próximo</a></li>
        <% } %>
    </ul>
  </nav>


