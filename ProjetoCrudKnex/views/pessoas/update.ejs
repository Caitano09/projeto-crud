<%- include('../partials/header') %>

<h1>Edit Person</h1>
<p><a class="btn btn-outline-primary" href="/pessoas">Back</a></p>

<!--<%= JSON.stringify(pessoa) %> --> 

<form method="POST">

  <div class="form-group">
    <label for="nome">Name</label>
    <input type="text" class="form-control" name="nome" id="nome" placeholder="Type your name"
      value="<%- pessoa.nome %>">
  </div>

  <div class="form-group">
    <label for="nascimento">Date of Birth</label>
    <input type="date" class="form-control" name="nascimento" id="nascimento" placeholder="Type your date of birth"
      value="<%- pessoa.nascimento %>">

    <div class="form-group">
      <label for="cargo">Role</label>
      <input type="text" class="form-control" name="cargo" id="cargo" placeholder="Type your role"
        value="<%- pessoa.cargo %>">
    </div>

    <button class="btn btn-primary" type="submit" class="btn btn-default">Update</button>
</form>

<%- include('../partials/footer') %>